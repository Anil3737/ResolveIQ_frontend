<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:orientation="vertical"
    android:paddingTop="60dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/ivCloseDrawer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:contentDescription="Close menu"
        android:focusable="true"
        android:padding="4dp"
        android:src="@drawable/ic_arrow_back"
        android:rotation="180" />

    <!-- Menu Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Home Menu Item (Selected) -->
        <LinearLayout
            android:id="@+id/menuHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_menu_item_selected"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Home"
                android:src="@drawable/ic_home_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Home"
                android:textColor="#2563EB"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Create Ticket Menu Item -->
        <LinearLayout
            android:id="@+id/menuCreateTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Create Ticket"
                android:src="@drawable/ic_add_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Create Ticket"
                android:textColor="#4B5563"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- My Tickets Menu Item -->
        <LinearLayout
            android:id="@+id/menuMyTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="My Tickets"
                android:src="@drawable/ic_my_tickets" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="My Tickets"
                android:textColor="#4B5563"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Settings Menu Item -->
        <LinearLayout
            android:id="@+id/menuSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Settings"
                android:src="@drawable/ic_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Settings"
                android:textColor="#4B5563"
                android:textSize="16sp" />

        </LinearLayout>
        
        <!-- Logout Menu Item (Added) -->
        <LinearLayout
            android:id="@+id/menuLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Logout"
                android:src="@drawable/ic_arrow_back" 
                android:rotation="180"
                app:tint="#EF4444" 
                xmlns:app="http://schemas.android.com/apk/res-auto"/> 
            <!-- Using existing icon with tint for now, or could use a distinct logout icon if available. 
                 Since I don't know if ic_logout exists, I'll reuse ic_arrow_back rotated or just a generic one.
                 Actually, reusing ic_settings or similar might be safer if I can't use tint properly without vector.
                 But let's assume tint works or at least compiles.
                 Wait, I should check if ic_logout exists.
                 I'll just use a simple TextView or reuse an existing drawable.
            -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Logout"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
