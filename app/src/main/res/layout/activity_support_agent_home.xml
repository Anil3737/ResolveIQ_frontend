<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?android:colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_menu"
                app:tint="?attr/colorOnSurface"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/bg_logo_circle"
                    android:padding="6dp"
                    android:background="@drawable/circle_primary"
                    android:backgroundTint="#2563EB"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ResolveIQ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivAgentProfile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_profile"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_filled"
                android:padding="2dp"/>

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_search"
                android:layout_toStartOf="@id/ivAgentProfile"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                app:tint="?attr/colorOnSurfaceVariant"/>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Hero Greeting Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_blue_gradient"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_lightning"
                            app:tint="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI ENHANCED AGENT VIEW"
                            android:textColor="@color/white"
                            android:layout_marginStart="6dp"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:alpha="0.9"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvGreetingAgent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good morning, Agent"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You have 4 critical tickets that require immediate attention."
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Quick Actions Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_card_rounded"
                        android:padding="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/bg_circle_placeholder"
                            android:background="@color/blue_50"
                            android:padding="8dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assigned Queue"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage your workload"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_card_rounded"
                        android:padding="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_document"
                            android:background="@color/gray_50"
                            android:padding="8dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Knowledge Base"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Articles &amp; solutions"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Stat Summary Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginBottom="24dp">

                    <!-- Active -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_card_rounded"
                        android:padding="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_ticket"
                                app:tint="#2563EB"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ACTIVE"
                                android:textColor="#2563EB"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnSurface"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open items"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <!-- Breach -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:background="@drawable/bg_card_rounded"
                        android:padding="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_warning_amber"
                                app:tint="#EF4444"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BREACH"
                                android:textColor="#EF4444"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:textColor="#EF4444"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Near breach"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <!-- Resolved -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_card_rounded"
                        android:padding="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_check_green"
                                app:tint="#16A34A"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RESOLVED"
                                android:textColor="#16A34A"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnSurface"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Queue Header -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High Priority Queue"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LIVE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#EF4444"
                        android:background="@drawable/bg_badge_live"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/highPriorityTitle"
                        android:layout_centerVertical="true"
                        android:id="@+id/highPriorityTitle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sort"
                        android:textColor="#2563EB"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <!-- Ticket Card #1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_rounded"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="P1"
                                android:background="@drawable/circle_filled"
                                android:backgroundTint="#111827"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                android:padding="4dp"/>
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CRITICAL"
                                android:textColor="#EF4444"
                                android:background="#FEE2E2"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="8dp"/>

                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="98 RISK"
                                android:textColor="#4F46E5"
                                android:background="#EEF2FF"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/bg_badge_live"
                            android:backgroundTint="#FEF2F2"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_clock"
                                app:tint="#EF4444"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:14:22"
                                android:textColor="#EF4444"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AG-IT-2026-001"
                        android:textSize="10sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Database Connectivity: Production Outage"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All requests to US-WEST-1 are timing out. Redis cache appearing disconnected..."
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_network_node"
                                app:tint="?attr/colorOnSurfaceVariant"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Infrastructure"
                                android:textSize="11sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginStart="6dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_profile"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/circle_filled"
                            android:padding="2dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <!-- Ticket Card #2 (Simplified for summary) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_rounded"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="P2"
                                android:background="@drawable/circle_filled"
                                android:backgroundTint="#F97316"
                                android:textColor="@color/white"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                android:padding="4dp"/>
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HIGH"
                                android:textColor="#F97316"
                                android:background="#FFF7ED"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="04:45:00"
                            android:textSize="10sp"
                            android:textColor="#92400E"
                            android:background="#FEF3C7"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:textStyle="bold"
                            android:drawablePadding="4dp"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Executive VPN issues - NYC Office"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginTop="8dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/deptLabel"
                            android:text="Network"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            app:drawableStartCompat="@drawable/ic_location"
                            android:drawablePadding="4dp"
                            app:drawableTint="?attr/colorOnSurfaceVariant"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="ASSIGNED"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#2563EB"
                            android:background="#EFF6FF"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <!-- Team Performance Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Performance"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_performance_card_blue"
                        android:padding="16dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_clock"
                                app:tint="#2563EB"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="+12%"
                                android:textColor="#2563EB"
                                android:textSize="10sp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.4h"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#1E3A8A"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg. Resolution"
                            android:textSize="10sp"
                            android:textColor="#2563EB"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_performance_card_green"
                        android:padding="16dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check_green"
                                app:tint="#16A34A"
                                android:id="@+id/ivCsat"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="98%"
                                android:textColor="#16A34A"
                                android:textSize="10sp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.9/5"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#064E3B"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CSAT Score"
                            android:textSize="10sp"
                            android:textColor="#16A34A"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agent Workspace (iOS)"
                    android:gravity="center"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:background="#F3F4F6"
                    android:paddingVertical="12dp"
                    android:textSize="13sp"
                    android:layout_marginBottom="16dp"
                    app:drawableStartCompat="@drawable/ic_document"
                    app:drawableTint="?attr/colorOnSurfaceVariant"
                    android:drawablePadding="8dp"
                    android:paddingHorizontal="16dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            app:menu="@menu/bottom_navigation_agent_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:itemIconTint="@color/primary_blue"
            app:itemTextColor="@color/primary_blue"
            app:labelVisibilityMode="labeled" />

        <!-- Floating Action Button (Center overlapping Bottom Nav as peek in designs) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white"
            app:backgroundTint="#2563EB"
            app:tint="@color/white"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="-28dp"
            android:elevation="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <include
        android:id="@+id/navView"
        layout="@layout/agent_navigation_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout>
