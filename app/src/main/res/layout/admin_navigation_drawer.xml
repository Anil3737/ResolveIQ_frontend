<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:orientation="vertical">

    <!-- Scrollable content area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ═══════════ HEADER: Profile Info ═══════════ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="40dp"
                android:paddingBottom="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivDrawerProfile"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile"
                    app:shapeAppearanceOverlay="@style/CircleImage" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDrawerUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alex Rivera"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDrawerUserRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUPER ADMIN"
                        android:textColor="#3B82F6"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOutlineVariant"
                android:layout_marginBottom="16dp" />

            <!-- ═══════════ MENU ITEMS ═══════════ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Dashboard (Selected) -->
                <LinearLayout
                    android:id="@+id/adminMenuDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_admin_menu_selected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Dashboard"
                        android:src="@drawable/ic_dashboard"
                        app:tint="#3B82F6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Dashboard"
                        android:textColor="#3B82F6"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Tickets -->
                <LinearLayout
                    android:id="@+id/adminMenuTickets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Tickets"
                        android:src="@drawable/ic_tickets"
                        app:tint="#4B5563" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Tickets"
                        android:textColor="#4B5563"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Teams -->
                <LinearLayout
                    android:id="@+id/adminMenuTeams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Teams"
                        android:src="@drawable/ic_teams"
                        app:tint="#4B5563" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Teams"
                        android:textColor="#4B5563"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Employees -->
                <LinearLayout
                    android:id="@+id/adminMenuEmployees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Employees"
                        android:src="@drawable/ic_user"
                        app:tint="#4B5563" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Employees"
                        android:textColor="#4B5563"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- System Activity -->
                <LinearLayout
                    android:id="@+id/adminMenuActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="System Activity"
                        android:src="@drawable/ic_history"
                        app:tint="#4B5563" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="System Activity"
                        android:textColor="#4B5563"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Create Staff (Expandable) -->
                <LinearLayout
                    android:id="@+id/adminMenuCreateStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Create Staff"
                        android:src="@drawable/ic_users"
                        app:tint="#4B5563" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Create Staff"
                        android:textColor="#4B5563"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivArrowStaff"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="#4B5563" />

                </LinearLayout>

                <!-- Sub-menu for Create Staff -->
                <LinearLayout
                    android:id="@+id/llSubMenuStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Lead -->
                    <LinearLayout
                        android:id="@+id/adminMenuCreateLead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="56dp"
                        android:paddingEnd="16dp"
                        android:paddingVertical="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/circle_filled"
                            android:backgroundTint="#9CA3AF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Lead"
                            android:textColor="#4B5563"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Agent -->
                    <LinearLayout
                        android:id="@+id/adminMenuCreateAgent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="56dp"
                        android:paddingEnd="16dp"
                        android:paddingVertical="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:background="@drawable/circle_filled"
                            android:backgroundTint="#9CA3AF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Agent"
                            android:textColor="#4B5563"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- SLA Policies -->
                <LinearLayout
                    android:id="@+id/adminMenuSlaPolicies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="SLA Policies"
                        android:src="@drawable/ic_sla_policies"
                        app:tint="#4B5563" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="SLA Policies"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Escalations -->
                <LinearLayout
                    android:id="@+id/adminMenuEscalations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Escalations"
                        android:src="@drawable/ic_notification_bell"
                        app:tint="#4B5563" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Escalations"
                        android:textColor="#4B5563"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Reports -->
                <LinearLayout
                    android:id="@+id/adminMenuReports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Reports"
                        android:src="@drawable/ic_bar_chart"
                        app:tint="#4B5563" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Reports"
                        android:textColor="#4B5563"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Settings -->
                <LinearLayout
                    android:id="@+id/adminMenuSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Settings"
                        android:src="@drawable/ic_settings"
                        app:tint="#4B5563" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Settings"
                        android:textColor="#4B5563"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- ═══════════ FOOTER: Logout ═══════════ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/adminMenuLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardMaxElevation="0dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_card_border">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/bg_admin_menu_selected"
                            android:padding="10dp"
                            android:src="@drawable/ic_logout"
                            app:tint="#3B82F6" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logout"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="V2.4.8 PREMIUM EDITION"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#D1D5DB" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
