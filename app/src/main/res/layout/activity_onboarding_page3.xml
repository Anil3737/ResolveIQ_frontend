<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_background">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/skip"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Large Circle (Outermost) -->
    <View
        android:id="@+id/circleLarge"
        android:layout_width="326dp"
        android:layout_height="326dp"
        android:background="@drawable/circle_outline_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <!-- Medium Circle -->
    <View
        android:id="@+id/circleMedium"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/circle_outline_medium"
        app:layout_constraintBottom_toBottomOf="@id/circleLarge"
        app:layout_constraintEnd_toEndOf="@id/circleLarge"
        app:layout_constraintStart_toStartOf="@id/circleLarge"
        app:layout_constraintTop_toTopOf="@id/circleLarge" />

    <!-- Small Circle -->
    <View
        android:id="@+id/circleSmall"
        android:layout_width="194dp"
        android:layout_height="194dp"
        android:background="@drawable/circle_outline_small"
        app:layout_constraintBottom_toBottomOf="@id/circleMedium"
        app:layout_constraintEnd_toEndOf="@id/circleMedium"
        app:layout_constraintStart_toStartOf="@id/circleMedium"
        app:layout_constraintTop_toTopOf="@id/circleMedium" />

    <!-- Central Icon Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/centralIconContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#2563EB"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="@id/circleSmall"
        app:layout_constraintEnd_toEndOf="@id/circleSmall"
        app:layout_constraintStart_toStartOf="@id/circleSmall"
        app:layout_constraintTop_toTopOf="@id/circleSmall">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_network_node"
            android:contentDescription="@string/network_icon_desc" />
    </androidx.cardview.widget.CardView>

    <!-- Floating Card 1 - Top Right (Sales) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/floatingCard1"
        android:layout_width="58dp"
        android:layout_height="66dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        app:cardBackgroundColor="#E8F5E9"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_chat"
            android:contentDescription="@string/sales_icon_desc" />
    </androidx.cardview.widget.CardView>

    <!-- Card 1 Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SALES"
        android:textColor="#94A3B8"
        android:textSize="11sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="@id/floatingCard1"
        app:layout_constraintStart_toStartOf="@id/floatingCard1"
        app:layout_constraintTop_toBottomOf="@id/floatingCard1" />

    <!-- Floating Card 2 - Right (DevOps) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/floatingCard2"
        android:layout_width="58dp"
        android:layout_height="66dp"
        android:layout_marginEnd="50dp"
        app:cardBackgroundColor="#FFF3E0"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="@id/circleLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/circleLarge">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_wrench"
            android:contentDescription="@string/prev_os_icon_desc" />
    </androidx.cardview.widget.CardView>

    <!-- Card 2 Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="DEVOPS"
        android:textColor="#94A3B8"
        android:textSize="11sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="@id/floatingCard2"
        app:layout_constraintStart_toStartOf="@id/floatingCard2"
        app:layout_constraintTop_toBottomOf="@id/floatingCard2" />

    <!-- Floating Card 3 - Bottom Left (Billing) -->

    <!-- Card 3 Label -->

    <androidx.cardview.widget.CardView
        android:id="@+id/floatingCard3"
        android:layout_width="58dp"
        android:layout_height="66dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="284dp"
        app:cardBackgroundColor="#FFF9C4"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:contentDescription="@string/billing_icon_desc"
            android:src="@drawable/ic_document" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="BILLING"
        android:textColor="#94A3B8"
        android:textSize="11sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="@id/floatingCard3"
        app:layout_constraintStart_toStartOf="@id/floatingCard3"
        app:layout_constraintTop_toBottomOf="@id/floatingCard3" />

    <!-- Decorative Dots -->

    <View
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/floating_dot_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Text -->

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/onboarding_title_3"
        android:textColor="#0F172A"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/subtitleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Page Indicators -->

    <!-- Get Started Button -->

    <!-- Bottom Indicator Line -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="@string/onboarding_subtitle_3"
        android:textColor="#64748B"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="579dp" />

    <View
        android:layout_width="128dp"
        android:layout_height="4dp"
        android:background="@drawable/bottom_indicator"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

